<h1>My Order History</h1>

<div class="card mb-4">
    <div class="card-body">
        <form action="/my-orders" method="GET" class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="email" class="col-form-label">Enter your email to view orders:</label>
            </div>
            <div class="col-auto">
                <input type="email" id="email" name="email" class="form-control" value="<%= email || '' %>" required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<% if (hasSearched) { %>
    <% if (orders.length> 0) { %>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order=> { %>
                        <tr>
                            <td>
                                <%= order.orderNumber %>
                            </td>
                            <td>
                                <%= new Date(order.createdAt).toLocaleDateString() %>
                            </td>
                            <td>
                                <span
                                    class="badge bg-<%= order.orderStatus === 'Placed' ? 'primary' : (order.orderStatus === 'Processing' ? 'warning' : (order.orderStatus === 'Delivered' ? 'success' : 'secondary')) %>">
                                    <%= order.orderStatus %>
                                </span>
                            </td>
                            <td>$<%= order.totalAmount.toFixed(2) %>
                            </td>
                            <td>
                                <!-- Could link to a detail view if needed, for now just summary -->
                                <button class="btn btn-sm btn-info text-white" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#order-<%= order._id %>">
                                    Items
                                </button>
                            </td>
                        </tr>
                        <tr class="collapse" id="order-<%= order._id %>">
                            <td colspan="5">
                                <ul class="list-group">
                                    <% order.items.forEach(item=> { %>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <%= item.name %> (x<%= item.quantity %>)
                                                    <span>$<%= (item.price * item.quantity).toFixed(2) %></span>
                                        </li>
                                        <% }) %>
                                </ul>
                                <div class="mt-2 text-end">
                                    <strong>Subtotal: $<%= order.subtotal.toFixed(2) %></strong><br>
                                    Tax: $<%= order.taxAmount.toFixed(2) %><br>
                                        Shipping: $<%= order.shippingCost.toFixed(2) %><br>
                                            <strong>Total: $<%= order.totalAmount.toFixed(2) %></strong>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="alert alert-warning">No orders found for this email.</div>
            <% } %>
                <% } %>