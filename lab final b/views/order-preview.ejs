<h2>Order Preview</h2>

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.product.name %>
                        </td>
                        <td>$<%= item.product.price.toFixed(2) %>
                        </td>
                        <td>
                            <%= item.quantity %>
                        </td>
                        <td>$<%= (item.product.price * item.quantity).toFixed(2) %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <div class="text-end">
            <h4>Subtotal: $<%= subtotal.toFixed(2) %>
            </h4>

            <% if (discount> 0) { %>
                <h5 class="text-success">Discount (10%): -$<%= discount.toFixed(2) %>
                </h5>
                <% } %>

                    <h3>Grand Total: $<%= grandTotal.toFixed(2) %>
                    </h3>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Have a Coupon?</h5>
                <form action="/order/preview" method="GET" class="d-flex">
                    <input type="text" name="coupon" class="form-control me-2" placeholder="Code"
                        value="<%= couponCode || '' %>">
                    <button type="submit" class="btn btn-primary">Apply</button>
                </form>
                <% if (couponMessage) { %>
                    <div class="mt-2 text-info">
                        <%= couponMessage %>
                    </div>
                    <% } %>
            </div>
        </div>

        <div class="d-grid gap-2">
            <form action="/order/confirm" method="POST">
                <input type="hidden" name="coupon" value="<%= couponCode %>">
                <button type="submit" class="btn btn-success btn-lg w-100">Confirm Order</button>
            </form>
            <a href="/cart" class="btn btn-secondary">Go Back to Cart</a>
        </div>
    </div>
</div>